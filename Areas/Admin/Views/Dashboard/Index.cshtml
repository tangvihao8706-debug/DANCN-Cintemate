@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Bảng điều khiển quản trị";
}

<style>
    :root {
        --cm-pink-main: #ff7fb6;
        --cm-pink-soft: #ffeaf5;
        --cm-pink-strong: #ff4f93;
        --cm-border-soft: #ffd6eb;
        --cm-text-main: #333333;
    }

    body {
        background: linear-gradient(135deg, #ffeaf5, #ffffff);
        font-family: 'Segoe UI', sans-serif;
        color: var(--cm-text-main);
    }

    .admin-dashboard {
        max-width: 900px;
        margin: 50px auto;
        background: #ffffff;
        border-radius: 20px;
        padding: 32px 40px;
        box-shadow: 0 14px 32px rgba(255, 160, 200, 0.35);
        border: 1px solid var(--cm-border-soft);
        animation: fadeSlideUp 0.8s ease forwards;
    }

    h2 {
        font-size: 2.2rem;
        font-weight: 700;
        margin-bottom: 24px;
        color: var(--cm-pink-strong);
        display: flex;
        align-items: center;
        gap: 12px;
        text-shadow: 0 0 12px rgba(255, 190, 210, 0.6);
    }

    ul {
        list-style: none;
        padding-left: 0;
        font-size: 1.1rem;
        margin-bottom: 26px;
        color: #555;
    }

        ul li {
            margin-bottom: 10px;
            padding-left: 32px;
            position: relative;
            font-weight: 500;
        }

            ul li::before {
                content: '🎬';
                position: absolute;
                left: 0;
                top: 1px;
                font-size: 1.3rem;
                user-select: none;
            }

            ul li:nth-child(2)::before {
                content: '👥';
            }

            ul li:nth-child(3)::before {
                content: '🎟️';
            }

            ul li strong {
                color: var(--cm-pink-strong);
                font-weight: 700;
            }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        font-size: 0.98rem;
        font-weight: 600;
        border-radius: 999px;
        cursor: pointer;
        border: 1.5px solid transparent;
        transition: all 0.25s ease;
        user-select: none;
        text-decoration: none;
        margin-right: 12px;
        margin-bottom: 10px;
    }

    .btn-outline-light {
        border-color: var(--cm-pink-main);
        color: var(--cm-pink-main);
        background-color: #ffffff;
    }

        .btn-outline-light:hover {
            background-color: var(--cm-pink-main);
            color: #ffffff;
            box-shadow: 0 8px 20px rgba(255, 143, 188, 0.6);
        }

    .btn-outline-info {
        border-color: #ffb0cf;
        color: #ff4f93;
        background-color: #fff7fc;
    }

        .btn-outline-info:hover {
            background-color: #ff8fbc;
            color: #ffffff;
            box-shadow: 0 8px 20px rgba(255, 143, 188, 0.6);
        }

    @@keyframes fadeSlideUp {
        0% {
            opacity: 0;
            transform: translateY(24px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .admin-dashboard {
            padding: 24px 20px;
            margin: 30px 12px;
        }

        h2 {
            font-size: 1.8rem;
        }

        .btn {
            width: 100%;
            text-align: center;
        }
    }
</style>

<div class="admin-dashboard">
    <h2> Admin Dashboard</h2>

    <ul>
        <li>Tổng số phim / suất chiếu: <strong>@ViewBag.EventCount</strong></li>
        <li>Tổng số người dùng: <strong>@ViewBag.UserCount</strong></li>
        <li>Tổng số vé đã đặt: <strong>@ViewBag.RegistrationCount</strong></li>
    </ul>

    <a href="/Admin/Dashboard/ManageEvents" class="btn btn-outline-light"> Quản lý phim / suất chiếu</a>
    <a href="/Admin/Dashboard/ManageUsers" class="btn btn-outline-info"> Quản lý người dùng</a>
    <a href="/Admin/Dashboard/ManageRegistrations" class="btn btn-outline-light"> Quản lý vé đã đặt</a>
    <a href="/Admin/Dashboard/ManageRatings" class="btn btn-outline-info"> Quản lý đánh giá phim</a>
</div>
