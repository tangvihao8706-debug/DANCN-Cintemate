@model EventManager.Models.Movie

<div class="container my-4">
    <div class="row g-4">
        <div class="col-md-4">
            <img src="@(String.IsNullOrEmpty(Model.PosterUrl) ? Url.Content("~/images/no-image.png") : Model.PosterUrl)" class="img-fluid rounded" style="width:100%; height:auto;" />
        </div>
        <div class="col-md-8">
            <h2 class="fw-bold" style="color:#ff4dd2;">@Model.Title</h2>
            <p class="text-muted">⭐ @Model.Rating.ToString("0.0") / 10 • @Model.Genre • @Model.Duration phút</p>

            <p>@Model.Description</p>

            <div class="mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
                @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning ms-2">Sửa</a>
                }
            </div>
        </div>
    </div>
</div>
