<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CineMate Auth</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <style>
        :root {
            --cm-pink-main: #ff7fb6;
            --cm-pink-soft: #ffeaf5;
            --cm-pink-strong: #ff4f93;
            --cm-text-main: #3d3d3d;
        }

        body {
            background: linear-gradient(135deg, #ffeaf5, #ffd6e8, #fff);
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .card {
            width: 380px;
            background: #ffffff;
            border-radius: 20px;
            border: 1.5px solid #ffd4e9;
            box-shadow: 0 12px 30px rgba(255, 160, 200, 0.28);
            padding: 2rem 2.2rem;
        }

        /* Tiêu đề */
        h3 {
            color: var(--cm-pink-strong);
            text-align: center;
            margin-bottom: 1.5rem;
            font-weight: 700;
            text-shadow: 0 0 8px rgba(255, 182, 210, 0.6);
        }

        /* Input */
        input.form-control {
            background: #fff;
            border: 1.5px solid #ffc7e1;
            border-radius: 12px;
            color: var(--cm-text-main);
            padding: 10px 14px;
            transition: 0.2s;
        }

            input.form-control:focus {
                border-color: var(--cm-pink-main);
                box-shadow: 0 0 8px rgba(255, 160, 200, 0.35);
            }

        /* Nút chính */
        .btn-primary {
            background-color: var(--cm-pink-main) !important;
            border: none !important;
            color: white !important;
            font-weight: 600;
            padding: 10px;
            border-radius: 12px;
            transition: all 0.25s ease;
            box-shadow: 0 6px 16px rgba(255, 143, 188, 0.5);
        }

            .btn-primary:hover {
                background-color: var(--cm-pink-strong) !important;
                box-shadow: 0 10px 22px rgba(255, 100, 160, 0.55);
            }

        /* Nút phụ */
        .btn-secondary {
            background-color: transparent !important;
            border: 1.5px solid var(--cm-pink-main) !important;
            color: var(--cm-pink-main) !important;
            border-radius: 12px;
            transition: 0.25s;
        }

            .btn-secondary:hover {
                background-color: var(--cm-pink-main) !important;
                color: white !important;
            }

        /* Alert */
        .alert-danger {
            background: #ffe0eb !important;
            border: 1px solid #ff9fbd !important;
            color: #b4004a !important;
            border-radius: 12px;
        }
    </style>
</head>

<body>
    <div class="card shadow">
        @RenderBody()
    </div>
</body>
</html>
